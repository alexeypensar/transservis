@import 'reset.css';
@import '__fonts.styl';
@import '__variables.styl';
@import '__helpers.styl';
@import '__animations.styl';
@import '__adaptive.styl';

html {
	scroll-behavior: smooth;
}


html, body {
	font-display: swap;
	font-family: 'Montserrat', sans-serif;
	font-size: 16px;
	font-weight: 400;
	color: $color-black;
	line-height: 1.5;
	background-color: #fff;

}


.container {
	max-width: 1200px;
	margin: 0 auto;
	width: 100%;
	//padding-left: 15px;
	//padding-right: 15px;
}


.header__nav {
	padding-top: 28px;
	padding-bottom: 22px;
}

.header__ul {
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.header__li {
	height: 35px;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}

.header__li, .header__link {
	display: flex;
}

.header__link_logo {
	margin-right: 105px;
}

.header__link_phone {
	margin-left: 50px;
	padding-left: 15px;
	position: relative;
	font-weight: 500;
	font-size: 20px;
	&::before {
		position: absolute;
		content: url('../img/icons/header-phone.svg');
		top: 5px;
		left: -12px;
	}
}

.header__link {
	text-decoration: none;
	text-transform: uppercase;
	color: $color-black;
}

.header__link_arrow {
	position: relative;
	padding-right: 8px;
	margin-right: 8px;
	&::after {
		content: url('../img/icons/arrow-down.svg');
		position: absolute;
		top: -3px;
		right: -10px;
	}
}



.header__link_callback {
	font-weight: 500;
	position: relative;
	top: 1px;
	{$text-gradient};

	&::after {
		position: absolute;
		content: '';
		height: 1px;
		width: 100%;
		background: $blue-gradient;
		bottom: -2px;
	}

}

//.header__content {
//	display: flex;
//	flex-direction: row;
//
//}

.header_left {
	padding-top: 115px;
}

.header {
	position: relative;
	top: 0;
	left: 0;
	padding-bottom: 65px;
}

.header_right {
	position: absolute;
	top: 100px;
	right: 0;
	height: 553px;
	width: 980px;
	& img {
		object-fit: cover;
	}
}

.header__h1 {
	font-weight: 700;
	font-size: 42px;
	text-transform: uppercase;
	margin-bottom: 17px;
}

.header__h1_blue {
	color: $color-blue;

}

.header__h2 {
	font-size: 1rem;
	font-weight: 400;
	margin-bottom: 40px;
}


.main-button {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 280px;
	height: 70px;
	text-transform: uppercase;
	color: #FFFFFF;
	background-color: $color-red;
	border: none;
	outline: none;
	font-weight: 600;
	box-shadow: 0 12px 25px -12px $color-red;
	border-radius: 4px;
	& img {
		margin-left: 20px;
	}

}

.header__advantages {
	margin-top: 52px;

}

.header__advantage {
	padding-left: 30px;
	position: relative;
	&:not(:last-child) {
		margin-bottom: 8px;
	}
	&::before {
		position: absolute;
		content: url('../img/icons/header-check.svg');
		left: 0;
		top: 1px;
	}
}

.calculator__wrapper {
	background-color: $color-lightgray;
	padding-top: 65px;
	padding-bottom: 65px;
	//height: 400px;
}

.calculator {
	padding: 60px 100px;
	background: $blue-gradient;
	border-radius: 4px;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
}


.calculator__heading {
	text-transform: uppercase;
	color: #FFFFFF;
	font-weight: 700;
	font-size: 42px;
	line-height: 150%;
	margin-bottom: 30px;
}


.calculator__inputs {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	width: 100%;


	&:first-of-type {
		margin-bottom: 20px;
	}

	&_numbers {
		display: flex;
		flex-direction: row;
		justify-content: flex-start;

	}
}

.calculator__input {
	padding: 23px 10px 23px 30px;
	height: 70px;
	border: 1px solid $color-border;


	&_split {
		width: 250px;
		border-radius: 4px;

		&:first-child {
			margin-right: -20px;
		}
		&:nth-child(3) {
			margin-left: -20px;
		}

	}

	&_weight {
		width: 210px;
		border-bottom-left-radius: 4px;
		border-top-left-radius: 4px;
	}

	&_volume {
		width: 210px;
		border-bottom-right-radius: 4px;
		border-top-right-radius: 4px;
		border-left: none;
	}

	&_length {
		width: 142px;
		border-bottom-left-radius: 4px;
		border-top-left-radius: 4px;
		border-right: none;
	}

	&_width{
		width: 155px;
		padding: 23px 20px;

	}

	&_height {
		width: 142px;
		border-bottom-right-radius: 4px;
		border-top-right-radius: 4px;
		border-left: none;

	}
}

.calculator__label {
	font-weight: 400;
	font-size: 16px;
	line-height: 150%;
	color: #FFFFFF;
	margin-bottom: 2px;
}

.pricelist__text {
	text-transform: uppercase;
	margin-top: 23px;
	{$text-gradient};

	& a {
		border-bottom: 1px solid $color-darkblue;
	}
}

.section__heading {
	color: $color-black;
	text-transform: uppercase;
	font-weight: 700;
	font-size: 42px;
	line-height: 1;
	margin-bottom: 40px;

	& span {
		color: $color-blue;
	}
}

.advantages {
	padding-top: 65px;
	padding-bottom: 35px;
}

.advantages__list {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
	flex-wrap: wrap;
}

.advantages__item {
	//margin-right: 15px;
	//margin-left: 15px;
	//margin-right: 30px;
	margin-bottom: 30px;
	border: 1px solid $color-border;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
	padding: 30px 15px 30px 36px;
	width: 380px;
	min-height: 210px;
	
	&:nth-child(odd) {
		background-color: $color-lightgray;
	}
	&:nth-child(even) {
		background-color: #FFFFFF;
	}

	& img {
		margin-bottom: 20px;
	}
}


.advantages__text span {
	font-weight: 600;
	font-size: 16px;
	line-height: 150%;
}


.services__wrapper {
	padding-top: 65px;
	padding-bottom: 65px;
	background-color: $color-lightgray;
}

.services_top, .services_bottom {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
}

.services_bottom {
	margin-top: 30px;
}

.services__item {
	background-color: #FFFFFF;
	position: relative;
	width: 278px;
	height: 283px;
	padding: 31px 22px;
	border: 1px solid $color-border;

	& .services__heading {
		width: 60%;
	}

	& img {
		position: absolute;
		bottom: 22px;
		right: 22px;
	}

	&_large {
		padding: 60px 45px;
		width: 585px;
		height: 280px;

		& .services__heading {
			font-weight: 500;
			font-size: 32px;
			line-height: 1;
			width: 100%;
		}

		& img {
			position: absolute;
			bottom: 42px;
			right: 42px;
		}
	}


}

.services__heading {
	font-weight: 500;
	font-size: 22px;
	line-height: 150%;

	&:first-letter {
		color: $color-red;
	}
}


.services__info {
	width: 547px;
	margin-top: 40px;
}