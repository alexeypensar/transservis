@import 'reset.css';
@import '__fonts.styl';
@import '__variables.styl';
@import '__helpers.styl';
@import '__animations.styl';
@import '__adaptive.styl';

html {
	scroll-behavior: smooth;
}


html, body {
	font-display: swap;
	font-family: 'Montserrat', sans-serif;
	font-size: 16px;
	font-weight: 400;
	color: $color-black;
	line-height: 1.5;
	background-color: #fff;

}


.container {
	max-width: 1200px;
	margin: 0 auto;
	width: 100%;
	//padding-left: 15px;
	//padding-right: 15px;
}


.header__nav {
	padding-top: 28px;
	padding-bottom: 22px;
}

.header__ul {
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.header__li {
	height: 35px;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}

.header__li, .header__link {
	display: flex;
}

.header__link_logo {
	margin-right: 105px;
}

.header__link_phone {
	margin-left: 50px;
	padding-left: 15px;
	position: relative;
	font-weight: 500;
	font-size: 20px;
	&::before {
		position: absolute;
		content: url('../img/icons/header-phone.svg');
		top: 5px;
		left: -12px;
	}
}

.header__link {
	text-decoration: none;
	text-transform: uppercase;
	color: $color-black;
}

.header__link_arrow {
	position: relative;
	padding-right: 8px;
	margin-right: 8px;
	&::after {
		content: url('../img/icons/arrow-down.svg');
		position: absolute;
		top: -3px;
		right: -10px;
	}
}



.header__link_callback {
	font-weight: 500;
	position: relative;
	top: 1px;
	{$text-gradient};

	&::after {
		position: absolute;
		content: '';
		height: 1px;
		width: 100%;
		background: $blue-gradient;
		bottom: -2px;
	}

}

//.header__content {
//	display: flex;
//	flex-direction: row;
//
//}

.header_left {
	padding-top: 115px;
}

.header {
	position: relative;
	top: 0;
	left: 0;
	padding-bottom: 65px;
}

.header_right {
	position: absolute;
	top: 100px;
	right: 0;
	height: 553px;
	width: 980px;
	& img {
		object-fit: cover;
	}
}

.header__h1 {
	font-weight: 700;
	font-size: 42px;
	text-transform: uppercase;
	margin-bottom: 17px;
}

.header__h1_blue {
	color: $color-blue;

}

.header__h2 {
	font-size: 1rem;
	font-weight: 400;
	margin-bottom: 40px;
}


.main-button {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 280px;
	height: 70px;
	text-transform: uppercase;
	color: #FFFFFF;
	background-color: $color-red;
	border: none;
	outline: none;
	font-weight: 600;
	box-shadow: 0 12px 25px -12px $color-red;
	border-radius: 4px;
	& img {
		position: relative;
		left: 20px;
	}

	&:hover, &:focus {
		box-shadow: 0 15px 25px -10px $color-darkred;
		//background-color: $color-darkred;
		//transform: translateY(-1px);
		transition: all 0.3s ease;
		& img {
			left: 25px;
			transition: all 0.3s ease;
		}
	}

}

.header__advantages {
	margin-top: 52px;

}

.header__advantage {
	padding-left: 30px;
	position: relative;
	&:not(:last-child) {
		margin-bottom: 8px;
	}
	&::before {
		position: absolute;
		content: url('../img/icons/header-check.svg');
		left: 0;
		top: 1px;
	}
}

.calculator__wrapper {
	background-color: $color-lightgray;
	padding-top: 65px;
	padding-bottom: 65px;
	//height: 400px;
}

.calculator {
	padding: 60px 100px;
	background: $blue-gradient;
	border-radius: 4px;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
}


.calculator__heading {
	text-transform: uppercase;
	color: #FFFFFF;
	font-weight: 700;
	font-size: 42px;
	line-height: 150%;
	margin-bottom: 30px;
}


.calculator__inputs {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	width: 100%;


	&:first-of-type {
		margin-bottom: 20px;
	}

	&_numbers {
		display: flex;
		flex-direction: row;
		justify-content: flex-start;

	}
}

.calculator__input {
	padding: 23px 10px 23px 30px;
	height: 70px;
	border: 1px solid $color-border;


	&_split {
		width: 250px;
		border-radius: 4px;

		&:first-child {
			margin-right: -20px;
		}
		&:nth-child(3) {
			margin-left: -20px;
		}

	}

	&_weight {
		width: 210px;
		border-bottom-left-radius: 4px;
		border-top-left-radius: 4px;
	}

	&_volume {
		width: 210px;
		border-bottom-right-radius: 4px;
		border-top-right-radius: 4px;
		border-left: none;
	}

	&_length {
		width: 142px;
		border-bottom-left-radius: 4px;
		border-top-left-radius: 4px;
		border-right: none;
	}

	&_width{
		width: 155px;
		padding: 23px 20px;

	}

	&_height {
		width: 142px;
		border-bottom-right-radius: 4px;
		border-top-right-radius: 4px;
		border-left: none;

	}
}

.calculator__label {
	font-weight: 400;
	font-size: 16px;
	line-height: 150%;
	color: #FFFFFF;
	margin-bottom: 2px;
}

.pricelist__text {
	text-transform: uppercase;
	margin-top: 23px;
	{$text-gradient};

	& a {
		border-bottom: 1px solid $color-darkblue;
	}
}

.section__heading {
	color: $color-black;
	text-transform: uppercase;
	font-weight: 700;
	font-size: 42px;
	line-height: 1;
	margin-bottom: 40px;

	& span {
		color: $color-blue;
	}
}

.advantages {
	padding-top: 65px;
	padding-bottom: 35px;
}

.advantages__list {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
	flex-wrap: wrap;
}

.advantages__item {
	//margin-right: 15px;
	//margin-left: 15px;
	//margin-right: 30px;
	margin-bottom: 30px;
	border: 1px solid $color-border;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
	padding: 30px 15px 30px 36px;
	width: 380px;
	min-height: 210px;
	
	&:nth-child(odd) {
		background-color: $color-lightgray;
	}
	&:nth-child(even) {
		background-color: #FFFFFF;
	}

	& img {
		margin-bottom: 20px;
	}
}


.advantages__text span {
	font-weight: 600;
	font-size: 16px;
	line-height: 150%;
}


.services__wrapper {
	padding-top: 65px;
	padding-bottom: 65px;
	background-color: $color-lightgray;
}

.services_top, .services_bottom {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
}

.services_bottom {
	margin-top: 30px;
}

.services__item {
	background-color: #FFFFFF;
	position: relative;
	width: 278px;
	height: 283px;
	padding: 31px 22px;
	border: 1px solid $color-border;

	& .services__heading {
		width: 60%;
	}

	& img {
		position: absolute;
		bottom: 22px;
		right: 22px;
	}

	&_large {
		padding: 60px 45px;
		width: 585px;
		height: 280px;

		& .services__heading {
			font-weight: 500;
			font-size: 32px;
			line-height: 1;
			width: 100%;
		}

		& img {
			position: absolute;
			bottom: 42px;
			right: 42px;
		}
	}


}

.services__heading {
	font-weight: 500;
	font-size: 22px;
	line-height: 150%;

	&:first-letter {
		color: $color-red;
	}
}


.services__info {
	width: 547px;
	margin-top: 40px;
}


.about-us {
	padding-top: 65px;
	padding-bottom: 65px;
}

.about-us__info {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
}

.about-us__content {
	margin-left: 10px;
	background: url('../img/about-us--map.png') no-repeat center center;
	height: 525px;
	width: 525px;

	padding: 120px 20px 120px 46px;

	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
}

.about-us__heading {
	font-weight: 700;
	font-size: 42px;
	color: $color-blue;
	text-transform: uppercase;
	margin-bottom: 27px;
}

.about-us__text {
	margin-bottom: 70px;
}

.about-us__link {
	font-weight: 600;
	font-size: 18px;
	line-height: 150%;
	text-decoration: none;
	display: flex;
	flex-direction: row;
	color: $color-red;
	text-transform: uppercase;

	& img {
		padding-left: 18px;
	}
}

.about-us__numbers {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
}

.about-us__number {
	width: 30%;

	& span {
		font-weight: 800;
		font-size: 80px;
		color: $color-blue;
		line-height: 1;
	}

}

.callback {
	margin-top: 65px;
	margin-bottom: 65px;
	width: 100%;
	//height: 350px;
	background: $blue-gradient;
	border-radius: 4px;
	padding: 60px 100px;
	display: flex;
	flex-direction: column;
	align-items: flex-start;
}

.callback__heading {
	margin-bottom: 32px;
	font-weight: 700;
	font-size: 42px;
	line-height: 150%;
	text-transform: uppercase;
	color: #FFFFFF;
}

.callback__inputs {
	width: 100%;
	display: flex;
	flex-direction: row;
	//justify-content: space-between;
	margin-bottom: 20px;

	& input {
		width: 38%;
		margin-right: 0;
	}

	& .main-button {
		width: 220px;
		margin-left: 30px;
	}
}

.callback__text, .callback__link {
	color: #FFFFFF;
	font-size: 12px;
}
	
.callback__link {
	text-decoration: none;
	position: relative;

	&::after {
		position: absolute;
		content: '';
		width: 100%;
		bottom: -3px;
		left: 0;
		height: 1px;
		background-color: $color-gray;
	}
}

.our-clients {
	padding-top: 65px;
	//padding-bottom: 130px;
	position: relative;
}


.embla {
	overflow: hidden;
	margin-left: 50px;
	margin-right: 50px;
}
.embla__container {
	display: flex;


}
.embla__slide {
	position: relative;
	min-width: 25%;
	//width: 150px;
	padding-right: 25px;
	height: 140px;
	display: flex;
	justify-content: center;
	align-items: center;
	//margin: 0 auto;



	& img {
		//width: 100%;
		//height: auto;
	}
}

.embla__button {
	border: none;
	outline: none;
	background: transparent;
	position: absolute;
	top: 72%;

	&_prev {
		left: 0;
	}

	&_next {
		right: 0;
	}

	&:hover, &:focus {
		transform: scale(1.2);
		transition: transform 0.2s ease;
	}
}



.footer {
	background-color: $color-lightgray;
	margin-top: 120px;
	//height: 500px;
}

.footer__inner {
	display: flex;
	flex-direction: row;
	align-items: flex-start;
}

.footer__info {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	padding: 40px 40px 30px 0;
	height: 445px;
	width: calc(100% - 530px);
}


.footer__info_top {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: flex-start;
	width: 100%;
	height: 100%;
	margin-bottom: 65px;
}

.footer__nav {
	margin-left: 80px;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	margin-top: 15px;
	height: 100%;
}

.footer__li:not(:last-child) {
	margin-bottom: 10px;
}

.footer__li_large {
	margin-bottom: 13px;
}

.footer__info_bottom {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
	width: 100%;
}


.footer__link {
	font-weight: 400;
	font-size: 16px;
	line-height: 150%;
	text-decoration: none;
	color: $color-black;
}

.footer__li_large, .footer__link_large {
	font-weight: 500;
	font-size: 18px;
	line-height: 150%;
	text-transform: uppercase;
	text-decoration: none;
	color: $color-black;
}

.footer__link_large {

}


.footer__copyright {
	font-weight: 400;
	font-size: 12px;
	line-height: 150%;
	color: $color-gray;
}

.footer__link_policy {
	font-weight: 400;
	font-size: 12px;
	line-height: 150%;
	text-decoration: none;
	position: relative;
	color: $color-gray;

	&::after {
		position: absolute;
		content: '';
		width: 100%;
		height: 1px;
		left: 0;
		bottom: 0;
		background-color: $color-gray;

	}

}




.footer__addresses {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	width: 530px;
	height: 505px;
	background: $blue-gradient;
	margin-top: -60px;
	position: relative;
	border-top-left-radius: 4px;
	border-top-right-radius: 4px;
	padding: 57px 0 63px 53px;
	color: #FFFFFF;
}

.address__heading {
	font-weight: 500;
	font-size: 22px;
	line-height: 150%;
	margin-bottom: 27px;
}

.address__select {
	margin-bottom: 33px;
	height: 70px;
	width: 392px;
	padding: 20px 30px;
	border-radius: 4px;
}

.address__subheading {
	font-weight: 500;
	font-size: 18px;
	line-height: 150%;
	margin-bottom: 25px;
	margin-top: 0;

}

.address__phone, .address__email, .footer address {
	font-weight: 400;
	font-size: 16px;
	line-height: 150%;
	font-style: normal;
	text-decoration: none;
	color: #FFFFFF;
	display: flex;
	& img {
		padding-right: 10px;
	}
}

.address__phone:not(:first-of-type) {
	padding-left: 35px;
}

.address__phone:first-of-type {
	display: flex;
	& img {
		padding-right: 10px;
	}
}

.address__email {
	margin-top: 18px;
}

.footer address {
	margin-bottom: 18px;

}