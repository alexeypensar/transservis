	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.header__ul {
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.header__li {
	height: 35px;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}

.header__li, .header__link {
	display: flex;
}

.header__li_arrow {
	position: relative;
}

.header__submenu {
	position: absolute;
	top: 30px;
	left: 0;
	padding: 15px;
	width: 220px;
	background-color: #FFFFFF;
	border: 1px solid $color-blue;
	box-shadow: 0 0 20px -8px gray;
	opacity: 0;
	height: 0;
	visibility: hidden;
	margin-top: 10px;
	&::before {
		position: absolute;
		top: -10px;
		left: 0;
		width: 100%;
		height: 10px;
		content: '';
	}



	& .header__link {
		margin-bottom: 10px;
		text-transform: none;

		&:hover, &:focus {
			color: $color-blue;
			transition: color 0.3s ease;
		}
	}
	& li:last-child .header__link {
		margin-bottom: 0;
	}
}

.header__li_arrow {
	&:hover, &:focus {

		& .header__link_arrow::after {

		}

		& .header__submenu {
			display: flex;
			flex-direction: column;
			justify-content: space-between;
			align-items: flex-start;
			height: auto;
			//background-color: red;
			opacity: 1;
			visibility: visible;
			transition: all 0.3s ease;
			z-index: 3;
		}
	}
}



.header__link_logo {
	margin-right: 105px;
	min-width: 122px;
}

.header__link_phone {
	margin-left: 50px;
	padding-left: 15px;
	position: relative;
