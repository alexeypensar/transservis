@media screen and (max-width: 1199.98px) {
	.container {
		max-width: 992px;
	}

	body {
		//font-size: 14px;
	}

	.header_left {
		padding-top: 60px;
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: flex-start;
		//z-index: 9999;
	}

	.header__advantages {
		margin-top: 15px;
		margin-right: auto;
		margin-left: 80px;
	}



	.header_right {
		position: relative;
		top: 40px;
		margin-left: auto;
		margin-right: auto;
		width: 100%;
		right: auto;
		max-width: 992px;
		height: auto;
		//background: rgba(255, 255, 255, 0.5);
		//z-index: 0;
		//min-width: 100%;
	}

	.header .embla {
		width: 100%;
	}

	.header .embla__slide__img {
		max-width: 100%;
	}

	.header__link_logo {
		margin-right: 20px;
	}


}


@media screen and (max-width: 991.98px) {
	.container {
		max-width: 768px;
	}

	body {
		font-size: 14px;
	}

	.header__advantages {
		margin-left: 40px;
	}
	.header__nav {
		padding: 18px;
	}

	.header__link_logo {
		margin-right: 15px;
	}

	.header__link_phone {
		margin-left: 15px;

		&::before {
			top: 0;
			left: -9px;
		}
	}

	.header__link {
		font-size: 0.8rem;
	}

	.header__link_arrow {
		//margin-right: 4px;
		padding-right: 4px;

		&::after {
			top: -2px;
		}
	}


}

@media screen and (max-width: 767.98px) {
	.container {
		max-width: 576px;
	}
}

