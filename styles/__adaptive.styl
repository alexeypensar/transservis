@media screen and (max-width: 1199.98px) {
	.container {
		max-width: 992px;
	}

	body {
		//font-size: 14px;
	}

	.header_left {
		padding-top: 60px;
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: flex-start;
		//z-index: 9999;
	}

	.header__advantages {
		margin-top: 15px;
		margin-right: auto;
		margin-left: 80px;
	}



	.header_right {
		position: relative;
		top: 40px;
		margin-left: auto;
		margin-right: auto;
		width: 100%;
		right: auto;
		max-width: 992px;
		height: auto;
		//background: rgba(255, 255, 255, 0.5);
		//z-index: 0;
		//min-width: 100%;
	}

	.header .embla {
		width: 100%;
	}

	.header .embla__slide__img {
		max-width: 100%;
	}

	.header__link_logo {
		margin-right: 20px;
	}

	.calculator__input {
		width: 180px;
		height: 60px;
		padding: 15px;
	}

	.calculator .main-button {
		height: 60px;
		margin-left: 10px;
	}


}


@media screen and (max-width: 991.98px) {
	.container {
		max-width: 768px;
	}

	body {
		font-size: 14px;
	}

	.header {
		padding-bottom: 30px;
	}

	.header__advantages {
		margin-left: 40px;
	}
	.header__nav {
		padding: 18px;
	}

	.header__link_logo {
		margin-right: 15px;
	}

	.header__link_phone {
		margin-left: 15px;

		&::before {
			top: 0;
			left: -9px;
		}
	}

	.header__link {
		font-size: 0.8rem;
	}

	.header__link_arrow {
		//margin-right: 4px;
		padding-right: 4px;

		&::after {
			top: -2px;
		}
	}

	.calculator__wrapper {
		padding-top: 30px;
		padding-bottom: 30px;

	}

	.calculator {
		padding: 40px;
	}

	.calculator__inputs_top {
		flex-direction: column;
		align-items: flex-start;
	}

	.calculator__inputs {
		&_cities, &_numbers {
			width: 100%;
			& .calculator__input {
				width: 50%;
			}
		}

		&_cities {
			margin-bottom: 15px;
			& input:first-child {
				border-top-right-radius: 0;
				border-bottom-right-radius: 0;
			}

			& input:last-child {
				border-top-left-radius: 0;
				border-bottom-left-radius: 0;
			}
		}
	}


}

@media screen and (max-width: 767.98px) {
	.container {
		max-width: 576px;
	}

	.header__li_mobile-hide {
		display: none;
	}

	.header__li_logo {
		//flex-grow: 3;
		//margin-left: 0;
		//margin-right: auto;
		flex-grow: 1;
		//margin-left: 0;
		//margin-right: auto;
		justify-content: flex-start;
	}

	.header__link_phone {
		margin-right: 15px;
	}

	.header_left {
		flex-direction: column;
		padding-top: 15px;
	}

	.header__h1 {
		margin-bottom: 15px;
		line-height: 1.3;
	}

	.header__h2 {
		margin-bottom: 20px;
	}

	.header__advantages {
		margin-left: 0;
		margin-top: 20px;
	}

	.calculator__heading {
		font-size: 2rem;
		line-height: 1.3;
	}

	.calculator__inputs_bottom {
		flex-direction: column;
	}

	.calculator .main-button {
		margin-top: 20px;
	}
}

@media screen and (max-width: 575.98px) {

	.header .main-button {
		width: 100%;
	}

	.header__li_logo {
		max-width: 50%;
	}

	.header__li_callback {
		display: none;
	}

	.header__link_phone {
		white-space: nowrap;
		margin-right: 0;
	}

	.header_right .header__embla-buttons {
		width: 80px;
		height: 40px;
		bottom: 40px;
	}

	.header_right .header__embla_prev, .header_right .header__embla_next {
		width: 40px;
		height: 40px;
	}

	.calculator {
		padding: 30px 15px;
	}

	.calculator .main-button {
		width: 100%;
		margin-left: 0;
	}

}

